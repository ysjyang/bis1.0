'',
{name:'disp',title:'禁用',action:function(){alert('禁用')},disabled:true},
[{name:'search',title:'查询',icon:'search',defaultbutton:true},{name:'advsearch',title:'高级查询',icon:'search',disabled:false,action:function(){alert(this.title)}}]
